        "convert-icons": "node scripts/convert-icons.js",
        "placeholder-icons": "node scripts/generate-placeholder-icons.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/munafsheikh/Hover.git"
    },
    "keywords": [
        "chrome-extension",
        "plantuml",
        "svg",
        "render",
        "hover",
        "diagram"
