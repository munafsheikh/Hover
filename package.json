    "license": "MIT",
    "bugs": {
        "url": "https://github.com/munafsheikh/Hover/issues"
    },
    "homepage": "https://github.com/munafsheikh/Hover#readme",
    "devDependencies": {
        "@babel/core": "^7.20.5",
        "@babel/preset-env": "^7.20.2",
        "babel-loader": "^9.1.0",
        "copy-webpack-plugin": "^11.0.0",
        "eslint": "^8.29.0",
        "webpack": "^5.75.0",
        "webpack-cli": "^5.0.1",
        "zip-webpack-plugin": "^4.0.1"
    },
    "dependencies": {
        "archiver": "^5.3.1",
        "hover-extension": "file:"
