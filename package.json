{
    "name": "hover-extension",
    "version": "1.0.1",
    "description": "A Chrome extension that provides render-on-hover functionality for image-as-code formats",
    "main": "dist/background.js",
    "scripts": {
        "build": "webpack --mode production",
        "dev": "webpack --mode development --watch",
        "type-check": "tsc --noEmit",
        "lint": "eslint src/**/*.ts",
        "test": "jest",
        "version": "node scripts/update-version.js && git add manifest.json",
        "package": "node scripts/package.js",
        "convert-icons": "node scripts/convert-icons.js",
        "placeholder-icons": "node scripts/generate-placeholder-icons.js",
        "codex:setup": "bash scripts/setup-codex.sh",
        "codex:check": "bash scripts/checks.sh",
        "codex:package": "bash scripts/build-package.sh",
        "format": "prettier 'src/**/*.{ts,tsx,js,json}' --write"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/munafsheikh/Hover.git"
    },
    "keywords": [
        "chrome-extension",
        "plantuml",
        "svg",
        "render",
        "hover",
        "diagram"
    ],
    "author": "Munaf Sheikh",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/munafsheikh/Hover/issues"
    },
    "homepage": "https://github.com/munafsheikh/Hover#readme",
    "devDependencies": {
        "@babel/core": "^7.20.5",
        "@babel/preset-env": "^7.20.2",
        "@babel/preset-typescript": "^7.20.0",
        "babel-jest": "^30.0.5",
        "babel-loader": "^9.1.0",
        "copy-webpack-plugin": "^11.0.0",
        "eslint": "^8.29.0",
        "jest": "^30.0.5",
        "prettier": "^3.6.2",
        "typescript": "^5.2.2",
        "webpack": "^5.75.0",
        "webpack-cli": "^5.0.1",
        "zip-webpack-plugin": "^4.0.1"
    },
    "dependencies": {
        "archiver": "^5.3.1",
        "hover-extension": "file:"
    }
}
